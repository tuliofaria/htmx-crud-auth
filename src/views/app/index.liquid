{% layout "layouts/app.liquid" %}

{% block content %}
<form action="/app/todos" method="post" hx-target="#todosWrapper" hx-post="/app/todos" hx-swap="afterbegin" hx-on::after-request="this.reset()">
  <input type="text" name="title" class="border p-4 m-4" />
<ul>

<div id="todosWrapper">
  {% for todo in todos %}
  {% render './partials/todos/item.liquid', todo: todo %}
  {% endfor %}
</div>

{% for user in users %}
    <li>{{ user.email }}</li>
  {% endfor %}
  </ul>
{% endblock %}
